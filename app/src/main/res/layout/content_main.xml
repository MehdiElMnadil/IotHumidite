<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actualHumidityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidité actuelle : "
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/actualHumidityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas de donnée"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"/>

        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Température mesurée :"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas de donnée"
            android:paddingVertical="10dp"/>

        <TextView
            android:id="@+id/instantText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date et heure des dernières mesures :"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/instantValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas de donnée"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <TextView
                android:id="@+id/humidityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidité cible :"
            android:textStyle="bold"
                android:paddingTop="50dp"/>

        <TextView
                android:id="@+id/humidityWanted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pas de donnée"
                android:paddingTop="20dp"/>

        <SeekBar
                android:id="@+id/humidityBar"
                android:layout_width="match_parent"
                android:paddingTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
         <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© Mehdi EL MNADIL et Sebastien EYNARD-MACHET"
             android:textStyle="italic"
             android:textColor="@android:color/darker_gray"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
